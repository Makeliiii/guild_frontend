<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJobView">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >


        <Toolbar
            android:elevation="5dp"
            android:id="@+id/toolbarAddJob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                >

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/back_button"
                    >
                </Button>


                <TextView
                    android:id="@+id/viewCJTitle"
                    android:text="@string/edit_job_view"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="Arial"
                    />

            </LinearLayout>

        </Toolbar>

        <TextView
            android:id="@+id/EditTitleText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Title"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/EditTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/EditTitle"
            >
        </TextView>

        <EditText
            android:id="@+id/EditTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbarAddJob"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Edit your title"
            android:background="@drawable/custome_edit_text_bg"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            >
        </EditText>

        <TextView
            android:id="@+id/EditJobDescription"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Job description"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/EditJobDescriptionText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/EditJobDescriptionText"
            >
        </TextView>

        <EditText
            android:id="@+id/EditJobDescriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Edit job description"
            android:background="@drawable/custome_edit_text_bg"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            >
        </EditText>

        <TextView
            android:id="@+id/EditUserDescription"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Owner description"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/EditUDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/EditUDescription"
            >
        </TextView>

        <EditText
            android:id="@+id/EditUDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditJobDescriptionText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Edit your description"
            android:background="@drawable/custome_edit_text_bg"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            >
        </EditText>



        <EditText
            android:id="@+id/EditContactPhoneNr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditUserDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Phone number"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_phone"
            >
        </EditText>

        <EditText
            android:id="@+id/EditContactMail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditContactPhoneNr"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Mail address"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_mail"
            >
        </EditText>

        <EditText
            android:id="@+id/EditContactLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditContactMail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Location"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_location"
            >
        </EditText>

        <EditText
            android:id="@+id/EditSalaryOffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EditContactLocation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Salary"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_salary"
            >
        </EditText>


        <LinearLayout
            android:id="@+id/BtnSaDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/EditSalaryOffer"

            >
        <Button
            android:id="@+id/BtnDelJob"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/gradient_button"
            android:text="Delete"
            android:textSize="15dp"
            android:textColor="#FFFF"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_margin="20dp"

            >
        </Button>

        <Button
            android:id="@+id/BtnSaveJob"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/gradient_button"
            android:text="Save"
            android:textSize="15dp"
            android:textColor="#FFFF"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_margin="20dp"

            >
        </Button>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/BtnSaDe"
            >
        </Space>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>