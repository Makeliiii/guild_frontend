<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJobView">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="Title"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/EditTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EditTitle"
        >
    </TextView>

    <EditText
        android:id="@+id/EditTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Write your title"
        android:background="@drawable/custome_edit_text_bg"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        >
    </EditText>

    <TextView
        android:id="@+id/JobDescription"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="Job description"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/JobDescriptionText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/JobDescriptionText"
        >
    </TextView>

    <EditText
        android:id="@+id/JobDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/EditTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Write job description"
        android:background="@drawable/custome_edit_text_bg"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        >
    </EditText>

    <TextView
        android:id="@+id/UserDescription"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="Owner description"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/AddUserDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/AddUserDescription"
        >
    </TextView>

    <EditText
        android:id="@+id/AddUserDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/JobDescriptionText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Description of yourself"
        android:background="@drawable/custome_edit_text_bg"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        >
    </EditText>



    <EditText
        android:id="@+id/ContactPhoneNr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AddUserDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Phone number"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/ic_phone"
        >
    </EditText>

    <EditText
        android:id="@+id/ContactMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ContactPhoneNr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Mail address"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_mail"
        >
    </EditText>

    <EditText
        android:id="@+id/ContactLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ContactMail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Location"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_location"
        >
    </EditText>

    <EditText
        android:id="@+id/SalaryOffer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ContactLocation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Salary"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_salary"
        >
    </EditText>


        <RelativeLayout
            android:id="@+id/DisclaimerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SalaryOffer"
            android:background="#EDEDED"
            android:layout_marginTop="35dp"
            >
            <TextView
                android:id="@+id/DisclaimerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDisclaimer\nCreating this ad adds a small one-time fee. This means that the business keeps up and the application is used seriously. By checking in you agree and approve these conditions.\n\n"
                android:textColor="#000000"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginRight="35dp"

                />
            <CheckBox
                android:id="@+id/DisclaimerCB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:checked="false"
                android:layoutDirection="rtl"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>


    <Button
        android:id="@+id/BtnSubmitJob"
        android:layout_width="140dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/DisclaimerContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/gradient_button"
        android:text="Submit"
        android:textSize="15dp"
        android:textColor="#FFFF"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >
    </Button>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/BtnSubmitJob"
            >
        </Space>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>