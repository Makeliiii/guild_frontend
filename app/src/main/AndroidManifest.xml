<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.guild">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddJobView"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Create new job">
        </activity>
        <activity android:name=".EditJobView"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Edit job">
        </activity>
        <activity android:name=".DetailedJobView"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Detailed view of a job">
        </activity>
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>