<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.guild">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Register"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddJobView"
            android:label="Create new job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditJobView"
            android:label="Edit job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditingView"
            android:label="Edit job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetailedJobView"
            android:label="Detailed view of a job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">

            <!--
            intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter
            -->
        </activity>
    </application>

</manifest>